#! /usr/bin/env bash
set -e

tags="$1"

if [ -z $tags ]; then
  tags="all"
fi

if ! [ -x "$(command -v ansible)" ]; then
  sudo apt install ansible
fi

if [ ! -d "$HOME/.dotfiles" ]; then
  git clone git@github.com:adrianord/dotfiles.git ~/.dotfiles
fi

if [[ -f "$HOME/.dotfile" ]]; then
  DOTFILE="$HOME/.dotfile"
fi

set -x
ansible-playbook -i ~/.dotfiles/hosts ~/.dotfiles/dotfiles.yml -K -t $tags ${DOTFILE:+-e @$DOTFILE}
set +x
