#! /usr/bin/env bash
set -e

tags="$1"

if [ -z $tags ]; then
  tags="all"
fi

if ! [ -x "$(command -v ansible)" ]; then
  sudo apt install ansible
fi

if [ ! -d "$HOME/.config/dotfiles/playbook" ]; then
  git clone git@github.com:adrianord/dotfiles.git "$HOME"/config/dotfiles/playbook
fi

if [[ -f "$HOME/.config/dotfiles/config" ]]; then
  CONFIG="$HOME/.config/dotfiles/config"
fi

set -x
ansible-playbook -i "${HOME}"/.config/dotfiles/playbook/hosts "${HOME}"/.config/dotfiles/playbook/dotfiles.yml -K -t $tags ${CONFIG:+-e @$CONFIG}
set +x
